<main>
  <section class="technique-container">
    <div class="technique-wrapper">
      <div class="tech-title_header">
        <h1 class="tt1">Technological</h1>
        <h1 class="tt2">All Major Brands Available</h1>
        <a href="/Phones" class="shop-now"> Shop Now </a>
      </div>
      <div class="tech-img_header">
        <img
          src="/imgs/Phone/Sony-Xperia-1-V.png"
          alt="Sony Xperia 1 V"
          title="Sony Xperia 1 V"
        />
      </div>
    </div>
  </section>
  <section class="product-option_container">
    <div class="product-wrapper">
      <div class="element-device">
        <div class="device-content">
          <img
            class="device-phone"
            src="/imgs/Phone/Sony-Xperia-1-V.png"
            alt="Sony Xperia 1 V"
            title="Sony Xperia 1 V"
          />
          <p class="name-device">Phone</p>
          <a href="/Products/Phones" class="view-more">View More</a>
        </div>
      </div>
      <div class="element-device">
        <div class="device-content">
          <img
            class="device-laptop"
            src="/imgs/Laptop/macbook.png"
            alt="Sony Xperia 1 V"
            title="Sony Xperia 1 V"
          />
          <p class="name-device">Laptop</p>
          <a href="/Products/Laptops" class="view-more">View More</a>
        </div>
      </div>
    </div>
  </section>
  <section class="top-product_container">
    <div class="top-product_wrapper">
      <div class="top-title_header">
        <div>Top Picks For You</div>
        <p>
          Find a bright ideal to suit your taste with our great selection of
          products
        </p>
      </div>
      <div class="top-product_content">
        {{> productPartials productPartialData}}
      </div>
      <a href="/Phones" class="view-more">View More</a>
    </div>
  </section>
  <section class="new-product_container">
    <div class="new-product_wrapper">
      <div class="img-product_wrapper">
        <img src="/imgs/Phone/z-flip4.png" alt="" />
      </div>
      <div class="content-product_wrapper">
        <p class="tt1">
          New Arrivals
        </p>
        <p class="tt2">
          Oppo Find N2
        </p>
        <button class="btn-shopNow">
          <span><a href="/Products/Phones">Shop now</a></span>
          <div />
        </button>
      </div>
    </div>
  </section>
  <section class="blogs-container">
    <div class="blogs-wrapper">
      <div class="blog-title_header">
        <p class="tt1">
          Our Blogs
        </p>
        <p class="tt2">
          Find a bright ideal to suit your taste with our great selection
        </p>
      </div>
      <div class="blogs-content">
        <div class="item-blog">
          <img class="build" src="/imgs/blog-build-pc.png" alt="" />
          <p class="name-content">
            How to build pc at home?
          </p>
          <a href="#" class="read-more">Read More</a>
        </div>
        <div class="item-blog">
          <img class="clean" src="/imgs/blog-clean-pc.png" alt="" />
          <p class="name-content">
            How to build pc at home?
          </p>
          <a href="#" class="read-more">Read More</a>
        </div>
        <div class="item-blog">
          <img class="decore" src="/imgs/blog-decore-pc.png" alt="" />
          <p class="name-content">
            How to build pc at home?
          </p>
          <a href="#" class="read-more">Read More</a>
        </div>
      </div>
      <a href="#" class="view-all-post">View All Post</a>
    </div>
  </section>
  <section class="instagram-container">
    <div class="insta-wrapper">
      <h1 class="title-insta">
        Our Instagram
      </h1>
      <p>Follow our store on Instagram</p>
      <div class="btn-Follow">Follow Us</div>
    </div>
  </section>
</main>