<main>
  <section class="title-header_container">
    <p class="tt1">Cart</p>
    <span class="tt2">
      <a href="/">
        Home
        <i class="fa-solid fa-chevron-right"></i>
      </a>
      Cart
    </span>
  </section>
  <section class="cart-container">
    <div class="cart_wrapper">
      <div class="lst-product_container">
        <table class="table-products">
          <thead class="table-products_header">
            <tr>
              <th class="name-column column-name">Product</th>
              <th class="name-column column-price">Price</th>
              <th class="name-column column-quantity">Quantity</th>
              <th class="name-column column-subtotal">Subtotal</th>
              <th class="name-column column-remove"></th>
            </tr>
          </thead>
          <tbody class="table-products_body">
            {{#each carts}}
            <tr class="item-product">
              <td class="name-product">
                <img
                  src="{{imgShow}}"
                  alt="Product Name"
                />
                <span>{{productName}}</span>
              </td>
              <td class="price-product">{{price}}</td>
              <td class="quantity-product">
                <input class="quantity" type="number" value="{{cartQuantity}}" readonly min="1" max="{{quantity}}" />
              </td>
              <td class="sub-total subtotal">{{subTotal}}</td>
              <td class="delete-product">
                <div class="remove-product">
                 <form action="/Cart/{{cartId}}?_method=DELETE" method="post">
                  <button class="deleteCart" style="background-color: transparent; border: none;" type="submit">
                     <i class="fa-solid fa-trash"></i>
                  </button>
                 </form>
                </div>
              </td>
            </tr>
            {{/each}}
          </tbody>
          <tfoot class="table-products_foot">
            <tr>
              <td class="total" colspan="0">Total</td>
              <td class="total-price" colspan="4"></td>
            </tr>
          </tfoot>
        </table>
      </div>
      <div class="buy-products">
        <a href="/Checkout">Buy</a>
      </div>
    </div>
  </section>
  <section class="service-container">
    <div class="wrapper-service">
      <div class="item-service">
        <h1 class="title-service">Free Delivery</h1>
        <p class="content-service">
          For all oders ovver $50, consectetur adipim scing elit.
        </p>
      </div>
      <div class="item-service">
        <h1 class="title-service">90 Days Return</h1>
        <p class="content-service">
          If goods have problems, consectetur adipim scing elit.
        </p>
      </div>
      <div class="item-service">
        <h1 class="title-service">Secure Payment</h1>
        <p class="content-service">
          100% secure payment, consectetur adipim scing elit.
        </p>
      </div>
    </div>
  </section>
</main>